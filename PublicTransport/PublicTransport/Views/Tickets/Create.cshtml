@model PublicTransport.Models.Ticket

@{
    ViewData["Title"] = "Create";
}
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/ticket.css")" />
<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<body>
    <div class="row">
        <div class="col-md-4 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <h4><b>  <label asp-for="Tic_name" class="control-label"></label></b></h4>
                    <input asp-for="Tic_name" class="form-control" />
                    <span asp-validation-for="Tic_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h4><b>  <label asp-for="Travels" class="control-label"></label></b></h4>
                    <input asp-for="Travels" class="form-control" />
                    <span asp-validation-for="Travels" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h4><b>   <label asp-for="Price" class="control-label"></label></b></h4>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-danger" />
                </div>
            </form>
        </div>
    </div>
</body>
<div class=" offset-md-5">
    <a style="color:blue" asp-action="Index"><h3>Back to List</h3></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
